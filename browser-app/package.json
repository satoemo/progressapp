{
  "name": "kintone-progress-app-v10-3-3",
  "version": "10.3.3",
  "description": "アニメーション進捗管理アプリ v10.3.3 - DOM構造の簡素化",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.browser.ts",
    "build": "tsc -p config/tsconfig.json && vite build --config config/vite.config.browser.ts",
    "build:test": "tsc -p config/tsconfig.json && vite build --config config/vite.config.test.ts",
    "build:watch": "vite build --config config/vite.config.browser.ts --watch",
    "preview": "vite preview --config config/vite.config.browser.ts",
    "typecheck": "tsc -p config/tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "perf:baseline": "node scripts/performance-baseline.mjs",
    "perf:compare": "node scripts/performance-compare.mjs"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^4.5.14"
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2"
  }
}
